<%- include("../layout/header.ejs")%>
<h1> Admin Registration </h1>

<form action="/register" method="post" enctype="multipart/form-data">
<div>
    <input type="text" placeholder="Enter name" name="name" size="40" required />
</div>
<br />
<div>
    <input type="email" placeholder="Enter email" name="email" size="40" required />
</div>
<br />
<div>
    <input type="password" placeholder="Enter password" name="password" size="40" required />
</div>
<br />
<div>
    <input type="file" name="image" />
</div>
<br />
<button type="submit"> Register </button>

</form>

<%if(typeof message !== 'undefined'){%>
<h4 style="color: green;"><%=message%></h4>
<%}%>
